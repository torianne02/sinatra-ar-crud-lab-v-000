<form action="/posts/<%= @post.id %>" method="post">
  <h1>Current Name: <%= @post.name %></h1>
  <h1>Current Content: <%= @post.content %></h1>

  Name: <input id="name" type="text" name="name" value="<%= @post.name %>">
  Content: <input id="content" type="text" name="content" value="<%= @post.content %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <button type="submit" value="submit">Submit</button>
</form>
